<div class="membership-general">
    <div class="form-title">Üzv olmaq üçün aşağıdakı anketi doldurun.</div>
    <form action="/membership" method="post" class="membership-form">
        <div class="form-side">
            <div class="form-element">
                <label for="name">Ad:</label>
                <br>
                <input type="text" id="name" name="name" placeholder="Adınız" required>
                <br>
            </div>
    
            <div class="form-element">
                <label for="surname">Soyad:</label>
                <br>
                <input type="text" id="surname" name="surname" placeholder="Soyadınız" required>
                <br>
            </div>
        </div>

        <div class="form-side">
            <div class="form-element">
                <label for="email">Email:</label>
                <br>
                <input type="email" id="email" name="email" placeholder="Emailiniz" required>
                <br>
            </div>
    
            <div class="form-element">
                <label for="phone">Mobil nömrə:</label>
                <br>
                <input type="number" id="phone" name="phone" placeholder="+994 xx xxx xx xx" required>
                <br>
            </div>
        </div>

        <div class="form-element">
            <label for="message">Mesaj:</label>
            <br>
            <textarea name="message" id="message" cols="46" rows="5" placeholder="Mesajınız..."></textarea>
        </div>
        <button type="submit" class="form-button">Göndər!</button>
        <%if(message){%>
            <p><%-message-%></p>
        <%}%>
        </form>
    </div>
</div>