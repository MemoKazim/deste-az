<%-include("partials/header", {title: title})-%>
<div class="asset-1">
  <%-include("partials/goBack", {nav: nav})-%>
  <form action="/admin/missions/create" method="post" enctype="multipart/form-data">
    <table>
      <tr>
        <td>
          <label for="">Name: </label>
        </td>
        <td>
          <input type="text" class="text-fields" name="name" placeholder="Navbar name" required>
        </td>
      </tr>
      <tr>
        <td>
          <label for="">Title: </label>
        </td>
        <td>
          <input type="text" class="text-fields" name="title" placeholder="Title" required>
        </td>
      </tr>
      <tr>
        <td>
          <label for="">Content: </label>
        </td>
        <td>
          <textarea type="text" class="textarea-fields" name="content" placeholder="Content..." required></textarea>
        </td>
      </tr>
      <tr>
        <td>
          <label for="">Template Type: </label>
        </td>
        <td>
            <select name="templateType" onchange="showBlueprint(this)" required>
                <option value="" selected>**Please choose an option**</option>
                <option value="1">Only Text</option>
                <option value="2">Text + Image</option>
                <option value="3">Text + Image + Sidebar</option>
              </select>
        </td>
      </tr>
      <tr>
        <td>
          <label for="">Choosen template blueprint: </label>
        </td>
        <td>
            <img src="#" alt="Blueprint Image" width="450rem" height="250rem" id="template">
        </td>
      </tr>
      <tr id="imageUpload" style="display:none;">
        <td>
          <label for="">Upload an Image: </label>
        </td>
        <td>
          <input type="file" accept="image/*" name="image" onchange="showUploadedImage(this)">
        </td>
      </tr>
      <tr id="imageShow" style="display:none;">
        <td>
            <label for="newImage">Uploaded Image: </label>
        </td>
        <td>
            <img id="newImage" src="#" alt="new-image" />
        </td>
      </tr>
      <tr>
        <td>
          <button type="submit" class="button create">Submit</button>
        </td>
      </tr>
    </table>
  </form>
<%-include("partials/footer")-%>