<%-include("partials/header", {title: title})-%>

      <div class="asset-1">
        <div class="title-create">
            <h1><%-title-%></h1>
            <a href="/admin/events/create" class="button create">Create</a>
        </div>
        <table class="styled-table table-1">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% let counter = 1;
                result.forEach((data)=>{%>
                    <tr>
                        <td><%-counter-%></td>
                        <td><%-data.title-%></td>
                        <td><%-data.content.substring(0,100)-%>...</td>
                        <td>
                            <table>
                                <tr>
                                    <td>
                                        <form action="/admin/events/<%=data._id%>" method="get">
                                            <button type="submit" class="button read">Read</button>
                                        </form>
                                    </td>
                                    <td>
                                        <form action="/admin/events/update/<%=data._id%>" method="get">
                                            <button type="submit" class="button update">Update</button>
                                        </form>
                                    </td>
                                    <td>
                                        <form action="/admin/events/update/photo/<%=data._id%>" method="get">
                                            <button type="submit" class="button update">Update Image</button>
                                        </form>
                                    </td>
                                    <td>
                                        <form action="/admin/events/delete/<%=data._id%>" method="post">
                                            <button type="submit" class="button delete">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                <%counter+=1})%>
            </tbody>
        </table>
    </div>
<%-include("partials/footer")-%>